<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_dot_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/quick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/karla_bold"
        android:text="@string/quick_searches"
        android:padding="5dp"
        android:lines="1"
        android:ellipsize="end"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/gray_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/quick"
        app:layout_constraintTop_toBottomOf="@id/quick">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:lines="1"
            android:ellipsize="end"
            android:background="@drawable/round_outline__background"
            android:fontFamily="@font/karla_bold"
            android:gravity="center"
            android:text="@string/my_time_table"
            android:textColor="@color/gray_light" />

        <TextView
            android:id="@+id/tv_my_programs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:lines="1"
            android:ellipsize="end"
            android:background="@drawable/round_outline__background"
            android:fontFamily="@font/karla_bold"
            android:gravity="center"
            android:text="@string/daily_editorial_enrichment_program"
            android:textColor="@color/gray_light" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/quick"
        app:layout_constraintTop_toBottomOf="@id/ll_1">

        <TextView
            android:id="@+id/tv_whats_new"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:lines="1"
            android:ellipsize="end"
            android:padding="10dp"
            android:background="@drawable/round_outline__background"
            android:fontFamily="@font/karla_bold"
            android:gravity="center"
            android:text="@string/whats_new"
            android:textColor="@color/gray_light" />

        <TextView
            android:id="@+id/tv_bills"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_weight="1"
            android:background="@drawable/round_outline__background"
            android:fontFamily="@font/karla_bold"
            android:gravity="center"
            android:text="@string/bills_amp_acts"
            android:textColor="@color/gray_light" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>