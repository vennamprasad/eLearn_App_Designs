<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme1" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="primaryTextColor">@color/primaryTextColor</item>
        <item name="secondaryTextColor">@color/secondaryTextColor</item>
        <item name="tabSelectedColor">@color/tabSelectedColor</item>
        <item name="tabUnselectedColor">@color/tabUnselectedColor</item>
        <item name="navTabPressed">@color/navTabPressed</item>
        <item name="statusBarColor">@color/statusBarColor</item>
        <item name="appBarColor">@color/appBarColor</item>
        <!--        <item name="android:actionButtonStyle">@style/myActionButtonStyle</item>-->
        <!--        <item name="actionButtonStyle">@style/myActionButtonStyle</item>-->
        <item name="backgroundColor">@color/backgroundColor</item>
        <item name="cardDialogColor">@color/cardDialogColor</item>
        <item name="toastSnackBarColor">@color/toastSnackBarColor</item>
        <item name="colorRipple">@color/colorRipple</item>
        <item name="colorControlHighlight">@color/overlay_dark_50</item> <!-- Ripple color -->
        <item name="android:windowBackground">@color/windowColor</item>
        <item name="android:fontFamily">@font/karla</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:navigationBarColor">#000</item>
        <!-- Bottom nav bar color -->
        <item name="android:windowContentTransitions">false</item>

        <!-- For view transition between activities -->
        <!--        <item name="android:windowActivityTransitions">true</item>-->
        <!--        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>-->
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="MyApp.Primary.Base.Light.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyApp.Primary.Base.Light.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme1.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme1.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme1.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
